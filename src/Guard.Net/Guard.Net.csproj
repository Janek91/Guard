<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net45;net461;netstandard1.3;netstandard2.0;netcoreapp2.1</TargetFrameworks>    
    <DefaultLanguage>en-US</DefaultLanguage>
  </PropertyGroup>

  <PropertyGroup>
    <Description>A simple library that facilitates runtime checks of code and allows to define preconditions and invariants within a method.</Description>
    <Company>George Pancescu</Company>
    <Copyright>Copyright Â©George Pancescu 2018</Copyright>
    <PackageLicenseUrl>https://github.com/george-pancescu/Guard/blob/master/LICENSE</PackageLicenseUrl>
    <PackageProjectUrl>https://github.com/george-pancescu/Guard</PackageProjectUrl>
    <PackageTags>Guard, preconditions, code contracts</PackageTags>
    <PackageReleaseNotes>Changed library root namespace to avoid name collision with the Guard class.</PackageReleaseNotes>
    <Version>1.0.1</Version>
    <AssemblyVersion>1.0.1.0</AssemblyVersion>
    <FileVersion>1.0.1.1</FileVersion>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <AssemblyName>GuardNet</AssemblyName>
    <RootNamespace>GuardNet</RootNamespace>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <PackageId>Guard.Net</PackageId>
  </PropertyGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'net45'">
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'net461'">
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'netstandard1.3'">
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'netstandard2.0'">
  </ItemGroup>

  <ItemGroup Condition="'$(TargetFramework)' == 'netcoreapp2.1'">
  </ItemGroup>  
</Project>
